<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Brand Views -->
    <record id="view_repair_brand_form" model="ir.ui.view">
        <field name="name">repair.brand.form</field>
        <field name="model">repair.brand</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_repair_device_model)d" type="action" class="oe_stat_button" icon="fa-mobile">
                            <field name="device_count" widget="statinfo" string="Modelos"/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Modelos">
                            <field name="device_model_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_repair_brand_tree" model="ir.ui.view">
        <field name="name">repair.brand.tree</field>
        <field name="model">repair.brand</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="device_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    
    <record id="action_repair_brand" model="ir.actions.act_window">
        <field name="name">Marcas</field>
        <field name="res_model">repair.brand</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>