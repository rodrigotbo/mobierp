<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_repair_order_form" model="ir.ui.view">
        <field name="name">repair.order.form</field>
        <field name="model">repair.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object" string="Confirmar Recebimento" 
                            class="btn-primary" states="draft"/>
                    <button name="action_start_diagnosis" type="object" string="Iniciar Diagnóstico" 
                            states="received"/>
                    <button name="action_start_repair" type="object" string="Iniciar Reparo" 
                            states="diagnosis,waiting_parts,waiting_approval"/>
                    <button name="action_done" type="object" string="Concluir Serviço" 
                            class="btn-success" states="in_repair,testing"/>
                    <button name="action_deliver" type="object" string="Entregar ao Cliente" 
                            class="btn-info" states="done"/>
                    <button name="action_cancel" type="object" string="Cancelar" 
                            states="draft,received,diagnosis"/>
                    <button name="action_print_receipt" type="object" string="Imprimir Comprovante" 
                            class="btn-secondary"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,received,diagnosis,in_repair,done,delivered"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Cancelado" 
                            attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" options="{'no_create': False, 'no_open': False}"/>
                            <field name="partner_phone"/>
                            <field name="partner_mobile"/>
                            <field name="partner_email"/>
                        </group>
                        <group>
                            <field name="date_entry"/>
                            <field name="date_expected"/>
                            <field name="technician_id"/>
                            <field name="priority" widget="priority"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Dispositivo">
                            <group>
                                <group>
                                    <field name="brand_id"/>
                                    <field name="device_model_id"/>
                                    <field name="device_imei"/>
                                </group>
                                <group>
                                    <field name="device_color"/>
                                    <field name="device_password" password="True"/>
                                </group>
                            </group>
                            <group>
                                <field name="accessories" placeholder="Ex: Carregador, capa, fone de ouvido..."/>
                            </group>
                        </page>
                        <page string="Diagnóstico">
                            <group>
                                <field name="problem_description" placeholder="Descreva o problema relatado pelo cliente..."/>
                                <field name="diagnosis" placeholder="Diagnóstico técnico do problema..."/>
                                <field name="internal_notes" placeholder="Observações internas (não visível ao cliente)..."/>
                            </group>
                        </page>
                        <page string="Serviços e Peças">
                            <field name="service_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="discount"/>
                                    <field name="tax_ids" widget="many2many_tags"/>
                                    <field name="price_subtotal" sum="Total"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="amount_untaxed"/>
                                <field name="amount_tax"/>
                                <div class="oe_subtotal_footer_separator oe_inline">
                                    <label for="amount_total"/>
                                </div>
                                <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>
                        <page string="Garantia">
                            <group>
                                <group>
                                    <field name="warranty_days"/>
                                    <field name="warranty_expire_date" attrs="{'invisible': [('date_delivered', '=', False)]}"/>
                                </group>
                                <group>
                                    <field name="date_completed" attrs="{'invisible': [('date_completed', '=', False)]}"/>
                                    <field name="date_delivered" attrs="{'invisible': [('date_delivered', '=', False)]}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Anexos">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Tree View -->
    <record id="view_repair_order_tree" model="ir.ui.view">
        <field name="name">repair.order.tree</field>
        <field name="model">repair.order</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'delivered'" 
                  decoration-info="state == 'done'"
                  decoration-warning="state in ['waiting_parts', 'waiting_approval']"
                  decoration-danger="state == 'cancelled'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="device_model_id"/>
                <field name="date_entry"/>
                <field name="date_expected"/>
                <field name="technician_id"/>
                <field name="amount_total"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'delivered'"
                       decoration-info="state == 'done'"
                       decoration-warning="state in ['waiting_parts', 'waiting_approval']"
                       decoration-danger="state == 'cancelled'"/>
                <field name="priority" widget="priority"/>
            </tree>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_repair_order_search" model="ir.ui.view">
        <field name="name">repair.order.search</field>
        <field name="model">repair.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="device_model_id"/>
                <field name="technician_id"/>
                <field name="device_imei"/>
                <separator/>
                <filter name="filter_today" string="Hoje" 
                        domain="[('date_entry', '>=', datetime.datetime.now().replace(hour=0, minute=0, second=0)),
                                ('date_entry', '&lt;', datetime.datetime.now().replace(hour=23, minute=59, second=59))]"/>
                <filter name="filter_this_week" string="Esta Semana" 
                        domain="[('date_entry', '>=', (datetime.datetime.now() - datetime.timedelta(days=datetime.datetime.now().weekday())).replace(hour=0, minute=0, second=0))]"/>
                <separator/>
                <filter name="filter_draft" string="Rascunho" domain="[('state', '=', 'draft')]"/>
                <filter name="filter_received" string="Recebido" domain="[('state', '=', 'received')]"/>
                <filter name="filter_in_progress" string="Em Andamento" 
                        domain="[('state', 'in', ['diagnosis', 'in_repair', 'testing'])]"/>
                <filter name="filter_done" string="Concluído" domain="[('state', '=', 'done')]"/>
                <filter name="filter_delivered" string="Entregue" domain="[('state', '=', 'delivered')]"/>
                <separator/>
                <filter name="filter_urgent" string="Urgente" domain="[('priority', 'in', ['1', '2'])]"/>
                <group expand="0" string="Agrupar Por">
                    <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_technician" string="Técnico" context="{'group_by': 'technician_id'}"/>
                    <filter name="group_partner" string="Cliente" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_brand" string="Marca" context="{'group_by': 'brand_id'}"/>
                    <filter name="group_date" string="Data de Entrada" context="{'group_by': 'date_entry:day'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Kanban View -->
    <record id="view_repair_order_kanban" model="ir.ui.view">
        <field name="name">repair.order.kanban</field>
        <field name="model">repair.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile" quick_create="false">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="device_model_id"/>
                <field name="date_entry"/>
                <field name="amount_total"/>
                <field name="state"/>
                <field name="priority"/>
                <field name="technician_id"/>
                <progressbar field="state" 
                            colors='{"cancelled": "danger", "delivered": "success", "done": "info"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <field name="priority" widget="priority"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <strong>Cliente:</strong> <field name="partner_id"/>
                                </div>
                                <div>
                                    <strong>Dispositivo:</strong> <field name="device_model_id"/>
                                </div>
                                <div>
                                    <strong>Entrada:</strong> <field name="date_entry" widget="date"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="technician_id" widget="many2one_avatar_user"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="amount_total" widget="monetary"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_repair_order" model="ir.actions.act_window">
        <field name="name">Ordens de Serviço</field>
        <field name="res_model">repair.order</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_repair_order_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Criar primeira Ordem de Serviço
            </p>
            <p>
                Gerencie as ordens de serviço de assistência técnica dos seus clientes.
            </p>
        </field>
    </record>
</odoo>