<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Categoria de Aplicação -->
    <record id="module_category_repair_service" model="ir.module.category">
        <field name="name">Assistência Técnica</field>
        <field name="description">Gerenciar assistência técnica e reparos</field>
        <field name="sequence">20</field>
    </record>
    
    <!-- Grupos de Acesso -->
    <record id="group_repair_user" model="res.groups">
        <field name="name">Usuário</field>
        <field name="category_id" ref="module_category_repair_service"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">Acesso básico para visualizar e criar ordens de serviço</field>
    </record>
    
    <record id="group_repair_technician" model="res.groups">
        <field name="name">Técnico</field>
        <field name="category_id" ref="module_category_repair_service"/>
        <field name="implied_ids" eval="[(4, ref('group_repair_user'))]"/>
        <field name="comment">Acesso para técnicos executarem reparos e atualizarem status</field>
    </record>
    
    <record id="group_repair_manager" model="res.groups">
        <field name="name">Gerente</field>
        <field name="category_id" ref="module_category_repair_service"/>
        <field name="implied_ids" eval="[(4, ref('group_repair_technician'))]"/>
        <field name="comment">Acesso total ao módulo de assistência técnica</field>
    </record>
    
    <!-- Regras de Registro -->
    <record id="repair_order_rule_user" model="ir.rule">
        <field name="name">Ordem de Serviço - Usuário vê todas</field>
        <field name="model_id" ref="model_repair_order"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_repair_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    
    <record id="repair_order_rule_technician" model="ir.rule">
        <field name="name">Ordem de Serviço - Técnico pode editar suas OS</field>
        <field name="model_id" ref="model_repair_order"/>
        <field name="domain_force">['|', ('technician_id', '=', user.id), ('technician_id', '=', False)]</field>
        <field name="groups" eval="[(4, ref('group_repair_technician'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    
    <record id="repair_order_rule_manager" model="ir.rule">
        <field name="name">Ordem de Serviço - Gerente acesso total</field>
        <field name="model_id" ref="model_repair_order"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_repair_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</odoo>